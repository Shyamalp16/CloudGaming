{
  "client": {
    "serverUrlBase": "ws://localhost:3002"
  },
  "host": {
    "targetProcessName": "vlc.exe",
    "window": {
      "resizeClientArea": true,
      "targetWidth": 1920,
      "targetHeight": 1080
    },
    "video": {
      "fps": 120,
      "bitrateStart": 45000000,
      "bitrateMin": 30000000,
      "bitrateMax": 60000000,
      "hwFramePoolSize": 8,
      "fullRange": false,
      "preset": "p4",
      "rc": "cbr",
      "bf": 0,
      "rcLookahead": 0,
      "asyncDepth": 4,
      "surfaces": 12
    },
    "capture": {
      "maxQueueDepth": 16,
      "framePoolBuffers": 12,
      "dropWindowMs": 100,
      "dropMinEvents": 2,
      "mmcss": { "enable": true, "priority": 2 },
      "cursor": false,
      "borderRequired": false
    }
  }
}