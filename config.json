{
  "client": {
    "serverUrlBase": "ws://localhost:3002"
  },
  "host": {
    "targetProcessName": "vlc.exe",
    "window": {
      "resizeClientArea": true,
      "targetWidth": 1920,
      "targetHeight": 1080
    },
    "video": {
      "fps": 200,
      "bitrateStart": 45000000,
      "bitrateMin": 30000000,
      "bitrateMax": 60000000,
      "hwFramePoolSize": 4,
      "fullRange": false
    },
    "capture": {
      "maxQueueDepth": 4,
      "dropWindowMs": 200,
      "dropMinEvents": 2,
      "mmcss": { "enable": true, "priority": 2 }
    }
  }
}