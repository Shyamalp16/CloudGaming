{
  "client": {
    "serverUrlBase": "ws://localhost:3002"
  },
  "host": {
    "targetProcessName": "vlc.exe",
    "window": {
      "resizeClientArea": true,
      "targetWidth": 1920,
      "targetHeight": 1080
    },
    "video": {
      "fps": 200,
      "pacingFixedUs": 5000,
      "bitrateStart": 35000000,
      "bitrateMin": 25000000,
      "bitrateMax": 60000000,
      "hwFramePoolSize": 16,
      "fullRange": false,
      "preset": "p7",
      "rc": "cbr",
      "bf": 0,
      "rcLookahead": 0,
      "asyncDepth": 3,
      "surfaces": 10,
      "ignorePli": true,
      "minPliIntervalMs": 500,
      "minPliLossThreshold": 0.03,
      "gpuTiming": true
    },
    "capture": {
      "copyPoolSize": 16,
      "maxQueueDepth": 20,
      "framePoolBuffers": 16,
      "dropWindowMs": 150,
      "dropMinEvents": 3,
      "mmcss": { "enable": true, "priority": 2 },
      "cursor": false,
      "borderRequired": false,
      "minUpdateInterval100ns": 0
    },
    "audio": {
      "bitrate": 64000,
      "complexity": 5,
      "expectedLossPerc": 10,
      "enableFec": true,
      "enableDtx": false,
      "application": 2049,
      "frameSizeMs": 10,
      "channels": 2,
      "useThreadAffinity": false,
      "encoderThreadAffinityMask": 0,
      "wasapi": {
        "preferExclusiveMode": true,
        "enforceEventDriven": true,
        "devicePeriodMs": 2.5,
        "fallbackPeriodMs": 5.0,
        "force48kHzStereo": true,
        "preferLinearResampling": true,
        "useDmoOnlyForHighQuality": false
      },
      "latency": {
        "enforceSingleFrameBuffering": true,
        "maxFrameSizeMs": 10,
        "minFrameSizeMs": 5,
        "strictLatencyMode": true,
        "warnOnBuffering": true,
        "targetOneWayLatencyMs": 20
      },
      "bitrateAdaptation": {
        "enabled": true,
        "minBitrate": 8000,
        "maxBitrate": 128000,
        "decreaseCooldownMs": 2000,
        "increaseIntervalMs": 10000,
        "increaseStep": 8000,
        "highLossThreshold": 0.05,
        "lowLossThreshold": 0.01,
        "cleanSamplesRequired": 30,
        "fecEnableThreshold": 0.03,
        "fecDisableThreshold": 0.005
      }
    },
    "input": {
      "blockWinKeys": true,
      "blockSystemKeys": false,
      "releaseAllOnDisconnect": true,
      "injectionPolicy": "REQUIRE_FOREGROUND",
      "allowFocusSteal": false,
      "mousePolicy": "DPI_AWARE",
      "clipCursorToTarget": false,
      "coalesceMouseMoves": true,
      "maxMouseMovesPerFrame": 100,
      "repeatPolicy": "THROTTLED",
      "maxKeyRepeatHz": 30,
      "keyRepeatDelayMs": 250,
      "maxInjectHz": 10000,
      "inputQueueTimeoutMs": 10,
      "stuckKeyTimeoutMs": 2000,
      "enableStuckKeyRecovery": true,
      "enableSequenceRecovery": true,
      "enableMouseSequencing": false,
      "maxRecoveryAttempts": 3,
      "enablePerEventLogging": false,
      "enableAggregatedLogging": true,
      "logIntervalMs": 60000,
      "usePionDataChannels": true, 
      "enableLegacyWebSocket": false,
      "maxPendingMessages": 100,
      "strictErrorHandling": false,
      "logInjectionErrors": true,
      "maxConsecutiveErrors": 10
    }
  }
}