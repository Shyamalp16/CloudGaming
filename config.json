{
  "client": {
    "serverUrlBase": "ws://localhost:3002"
  },
  "host": {
    "targetProcessName": "vlc.exe",
    "window": {
      "resizeClientArea": true,
      "targetWidth": 1920,
      "targetHeight": 1080
    },
    "video": {
      "fps": 200,
      "pacingFixedUs": 5000,
      "bitrateStart": 45000000,
      "bitrateMin": 30000000,
      "bitrateMax": 60000000,
      "hwFramePoolSize": 16,
      "fullRange": false,
      "preset": "p7",
      "rc": "cbr",
      "bf": 0,
      "rcLookahead": 0,
      "asyncDepth": 2,
      "surfaces": 8,
      "ignorePli": true,
      "minPliIntervalMs": 500,
      "minPliLossThreshold": 0.03
    },
    "capture": {
      "copyPoolSize": 16,
      "maxQueueDepth": 20,
      "framePoolBuffers": 16,
      "dropWindowMs": 150,
      "dropMinEvents": 3,
      "mmcss": { "enable": true, "priority": 2 },
      "cursor": false,
      "borderRequired": false,
      "minUpdateInterval100ns": 0
    }
  }
}